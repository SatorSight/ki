                        </a>
                    </div>
                </div>

            </div>
        </div>


        <h2 style="margin-top: 20px;">Новые поступления:</h2>
        <div class="magazines" style="overflow: hidden; text-align: center;">


            {% for item in journals %}

                <div class="magazine" style="width: 49%;">
                    <div class="magazine-inner">
                        <a href="{{ url('detail', {
                            'title': item.url,
                            'year' : item.year,
                            'month' : item.month,
                            'number' : item.number
                        }) }}">

                            <div class="cover" style="
                                    background-image: url('{{ item.imageMain }}');
                                    "></div>

                        </a>
                        <p class="title"><a href="{{ url('detail', {
                                'title': item.url,
                                'year' : item.year,
                                'month' : item.month,
                                'number' : item.number
                            }) }}">
                            </a><a href="{{ url('detail', {
                                'title': item.url,
                                'year' : item.year,
                                'month' : item.month,
                                'number' : item.number
                            }) }}">
                                {{ item.title }}
                            </a>
                        </p>
                        <p class="date">
                            {{ item.month|date("F") }}

                            {{ item.date | localizeddate('none', 'none', 'ru_RU', null, 'LLLL') | capitalize }}

                            {{ item.year }}</p>
                        <p class="date">
                            {% if item.getNumberSet == 0 %}
                                выпуск {{ item.number }}
                            {% endif %}
                        </p>
                    </div>
                </div>
            {% endfor %}


            {% for key,item in j_names %}
                <div class="journal-{{ key }}">
                    <span class="j-group-title">{{ item }}</span>
                    {% for key2,item2 in journals_grouped[item] %}
                        <div class="magazine" style="width: 49%;">
                            <div class="magazine-inner">
                                <a href="{{ url('detail', {
                                    'title': item2.url,
                                    'year' : item2.year,
                                    'month' : item2.month,
                                    'number' : item2.number
                                }) }}">

                                    <div class="cover" style="
                                            background-image: url('{{ item2.imageMain }}');
                                            "></div>

                                </a>
                                <p class="title"><a href="{{ url('detail', {
                                        'title': item2.url,
                                        'year' : item2.year,
                                        'month' : item2.month,
                                        'number' : item2.number
                                    }) }}">
                                    </a><a href="{{ url('detail', {
                                        'title': item2.url,
                                        'year' : item2.year,
                                        'month' : item2.month,
                                        'number' : item2.number
                                    }) }}">
                                        {{ item2.title }}
                                    </a>
                                </p>
                                <p class="date">
                                    {#{{ item.month|date("F") }}#}

                                    {{ item2.date | localizeddate('none', 'none', 'ru_RU', null, 'LLLL') | capitalize }}

                                    {{ item2.year }}</p>
                                <p class="date">
                                    {% if item2.getNumberSet == 0 %}
                                        выпуск {{ item2.number }}
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}


            <!-- / one magazine -->
        </div>
        <!-- / magazines-->

        <div class="footer">

            <p class="disclaimer">
                Киоск плюс 2016-2017
            </p>

            <p class="accordion disclaimer">Информация для пользователей</p>
            <div class="panel">
                <ul id="open">
                    <li><a href="#">Информация для пользователей</a></li>
                    <li><a href="#">Управление Услугой</a></li>
                    <li><a href="#">Условия оказания услуги</a></li>
                </ul>
            </div>

            <script>
                var acc = document.getElementsByClassName("accordion");
                var i;

                for (i = 0; i < acc.length; i++) {
                    acc[i].onclick = function () {
                        this.classList.toggle("active");
                        var panel = this.nextElementSibling;
                        if (panel.style.maxHeight) {
                            panel.style.maxHeight = null;
                        } else {
                            panel.style.maxHeight = panel.scrollHeight + "px";
                        }
                    }
                }
            </script>
        </div>
        <!-- / footer -->
    </div>
{% endblock %}



